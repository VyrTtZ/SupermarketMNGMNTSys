<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0"
            style="-fx-background-color: linear-gradient(to bottom right, #1e1e1e, #2a2a2a);"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.supermarketmngmntsys.MarketController">
   <children>

      <!-- Back Button -->
      <Button layoutX="30.0" layoutY="30.0" onAction="#ret"
              style="-fx-background-color: #0078d7; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-family: 'Segoe UI Semibold'; -fx-background-radius: 8; -fx-padding: 6 14 6 14; -fx-cursor: hand;"
              text="Back" />

      <!-- Market Name Pane -->
      <Pane fx:id="namePane" layoutX="220.0" layoutY="30.0" prefHeight="60.0" prefWidth="680.0"
            style="-fx-background-color: #252526; -fx-background-radius: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 10;"
            AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="30.0" />

      <!-- Search Section -->
      <Pane fx:id="searchPane" layoutX="940.0" layoutY="30.0" prefHeight="70.0" prefWidth="420.0"
            style="-fx-background-color: #252526; -fx-background-radius: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 10;">
         <children>
            <TextField fx:id="searchBar" layoutX="15.0" layoutY="20.0" prefWidth="300.0"
                       promptText="Search item..."
                       style="-fx-background-color: #1e1e1e; -fx-text-fill: #f0f0f0; -fx-prompt-text-fill: #888888; -fx-background-radius: 8; -fx-border-color: #3a3a3a; -fx-border-radius: 8;" />
            <Button fx:id="searchButton" layoutX="325.0" layoutY="20.0" onAction="#search" text="Search"
                    style="-fx-background-color: #0078d7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" />
         </children>
      </Pane>

      <!-- Left Navigation / Tree Pane -->
      <TreeView fx:id="treePane" layoutX="30.0" layoutY="110.0" prefWidth="300.0" prefHeight="580.0"
                style="-fx-background-color: #2f2f31; -fx-control-inner-background: #2f2f31; -fx-text-fill: #f0f0f0; -fx-background-radius: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 10;"
                AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="110.0" AnchorPane.bottomAnchor="90.0" >
      </TreeView>

      <!-- Market View / Canvas Pane -->
      <Pane fx:id="marketViewPane" layoutX="350.0" layoutY="110.0" prefHeight="450.0" prefWidth="640.0"
            style="-fx-background-color: #252526; -fx-background-radius: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 10;"
            AnchorPane.topAnchor="110.0" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="400.0">
         <children>
            <Canvas fx:id="gridCanvas" height="450.0" width="640.0" />
            <Spinner fx:id="floorNum" editable="true" layoutX="555.0" layoutY="15.0" prefHeight="25.0" prefWidth="60.0"
                     style="-fx-background-color: #1e1e1e; -fx-text-fill: #f0f0f0; -fx-border-color: #3a3a3a; -fx-border-radius: 8;" />
         </children>
      </Pane>

      <!-- Stock Info Pane -->
      <Pane fx:id="stockPane" layoutX="1010.0" layoutY="110.0" prefHeight="280.0" prefWidth="330.0"
            style="-fx-background-color: #2f2f31; -fx-background-radius: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 10;" />

      <!-- Bottom Edit Panel -->
      <VBox fx:id="editPane" alignment="TOP_CENTER" prefHeight="160.0" prefWidth="1000.0" spacing="12"
            style="-fx-background-color: #2d2d30; -fx-padding: 16; -fx-background-radius: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 10;"
            AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="50.0">
         <children>
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;" text="Add Elements" />
            <VBox fx:id="addOptionsPane" alignment="CENTER_LEFT" spacing="8"
                  style="-fx-background-color: #1e1e1e; -fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 8;" />
         </children>
      </VBox>

      <!-- Bottom Left Reports Pane -->
      <VBox fx:id="reportPane" layoutX="30.0" layoutY="710.0" prefHeight="160.0" prefWidth="300.0"
            alignment="CENTER" spacing="8"
            style="-fx-background-color: #2d2d30; -fx-background-radius: 10; -fx-border-color: #3a3a3a; -fx-border-radius: 10;">
         <children>
            <Label text="Reports" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-weight: bold;" />
         </children>
      </VBox>

   </children>
</AnchorPane>
